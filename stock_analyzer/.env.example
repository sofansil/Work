# ============================================
# 텔레그램 설정 (필수)
# ============================================
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# 데이터베이스 설정
# ============================================
DB_URL=sqlite:///stock_history.db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# 스크리닝 설정
# ============================================
SCREENING_DEFAULT_THRESHOLD=5.0
SCREENING_MAX_WORKERS=12  # 권장: 10-15 (SQLite 안정성과 성능 균형)
SCREENING_BATCH_SIZE=500
SCREENING_SOCKET_TIMEOUT=10
SCREENING_REQUEST_TIMEOUT=30
SCREENING_TOTAL_TIMEOUT=300
SCREENING_RATE_LIMIT_DELAY=0.1

# ============================================
# 분석 설정
# ============================================
ANALYSIS_LOOKBACK_DAYS=120
ANALYSIS_MA_PERIOD_SHORT=5
ANALYSIS_MA_PERIOD_LONG=20
ANALYSIS_VOLUME_WINDOW=20
ANALYSIS_VOLATILITY_WINDOW=20

# ============================================
# 분류 기준 (A/B/C 등급)
# ============================================
# A급 기준
CLASSIFICATION_A_SCORE_THRESHOLD=6
CLASSIFICATION_A_VOLUME_MULTIPLIER_PREV=3.0
CLASSIFICATION_A_VOLUME_MULTIPLIER_AVG5=5.0
CLASSIFICATION_A_PRICE_BREAKOUT_RATIO=1.04
CLASSIFICATION_A_CANDLE_BODY_RATIO=0.7
CLASSIFICATION_A_HIGH20_PROXIMITY=0.99

# B급 기준
CLASSIFICATION_B_SCORE_THRESHOLD=4
CLASSIFICATION_B_HIGH20_PROXIMITY=0.95
CLASSIFICATION_B_VOLUME_MULTIPLIER=2.0

# C급 기준
CLASSIFICATION_C_SCORE_THRESHOLD=2
CLASSIFICATION_C_RETURN_THRESHOLD=2.0

# ============================================
# 캐시 설정
# ============================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ============================================
# 로깅 설정
# ============================================
LOG_LEVEL=INFO
LOG_FILE_PATH=stock_analyzer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================
# 파일 경로 설정
# ============================================
FILE_WATCHLIST_JSON=watchlist.json
FILE_WATCHLIST_CSV=watchlist.csv
FILE_OUTPUT_DIR=outputs

# ============================================
# 기타 설정
# ============================================
DEBUG=false
